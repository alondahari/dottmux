#!/bin/bash

source ~/.tmux/tmux-utils.sh

create_default_session ~/fan-inc "faninc" 0
create_window_at ~/fan-inc/faninc-api "faninc" "api-code" "zsh"
create_window_at ~/fan-inc/faninc-api "faninc" "api-build" "zsh"
create_window_at ~/fan-inc/faninc-flutter "faninc" "fe-code" "zsh"
create_window_at ~/fan-inc/faninc-flutter "faninc" "fe-build" "zsh"
create_window_at ~/fan-inc/faninc-book "faninc" "book" "zsh"
create_window_at ~/fan-inc/faninc-terraform "faninc" "terraform" "zsh"
create_window_at ~/fan-inc/faninc-k8s "faninc" "k8s" "zsh"
create_window_at ~/fan-inc/faninc-lambdas "faninc" "lambdas" "zsh"
create_window_at ~/fan-inc/faninc-faktory-server "faninc" "faktory" "zsh"
create_window_at ~/fan-inc/ "faninc" "ngrok" "zsh"
create_window_at ~/fan-inc/faninc-api "faninc" "faktory-server" "zsh"
create_window_at ~/fan-inc/faninc-api "faninc" "faktory-workers" "zsh"
create_window_at ~/fan-inc/faninc-api/packages/faninc-api-shared "faninc" "faninc-api-shared" "zsh"

tmux send-keys 'tmux split-window -t 1 -p 10' C-j
tmux send-keys -t 1 'nvim' C-j

attach_to_session "faninc"
